<?xml version='1.0' encoding='utf-8'?>
<widget id="TEMPLATE_ID" version="TEMPLATE_VERSION" android-versionCode="TEMPLATE_ANDROIDVERSIONCODE" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TEMPLATE_NAME</name>
    <description>
        The smartest way to schedule meetings
    </description>
    <author email="devservices@meetin.gs" href="http://swipetomeet.com">
        Meetin.gs
    </author>
    <content src="index.html" />
    <access origin="*" />

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#67cfe9" />

    <preference name="android-minSdkVersion" value="15" />
    <preference name="xwalkVersion" value="14+" />
    <preference name="xwalkCommandLine" value="--disable-pull-to-refresh-effect" />
    <preference name="xwalkMode" value="embedded" />

    <platform name="android">

      <hook type="before_prepare" src="../hooks/beforePrepareCopyResFiles.js" />

      <icon src="www/project/android/drawable-ldpi/icon.png" density="ldpi" />
      <icon src="www/project/android/drawable-mdpi/icon.png" density="mdpi" />
      <icon src="www/project/android/drawable-hdpi/icon.png" density="hdpi" />
      <icon src="www/project/android/drawable-xhdpi/icon.png" density="xhdpi" />
      <icon src="www/project/android/drawable-xxhdpi/icon.png" density="xxhdpi" />
      <icon src="www/project/android/drawable-xxxhdpi/icon.png" density="xxxhdpi" />

      <preference name="SplashScreen" value="screen" />
      <preference name="SplashScreenDelay" value="7000" />

      <splash src="www/project/splashscreens/android_mdpi_splash.9.png" density="mdpi" />
      <splash src="www/project/splashscreens/android_hdpi_splash.9.png" density="hdpi" />
      <splash src="www/project/splashscreens/android_xhdpi_splash.9.png" density="xhdpi" />
      <splash src="www/project/splashscreens/android_xxhdpi_splash.9.png" density="xxhdpi" />


      <!-- A wildcard can be used to whitelist the entire network,
           over HTTP and HTTPS.  -->
      <allow-navigation href="*" />

      <!-- Allow links to web pages to open in a browser -->
      <allow-intent href="http://*/*" />
      <allow-intent href="https://*/*" />

      <!-- Allow custom url schemes -->
      <allow-intent origin="tel:*" />
      <allow-intent origin="geo:*" />
      <allow-intent origin="mailto:*" />
      <allow-intent origin="sms:*" />
      <allow-intent origin="market:*" />
      <allow-intent origin="skype:*" />
      <allow-intent origin="twitter:*" />
      <allow-intent origin="fb:*" />

  </platform>

  <platform name="ios">
    <!-- iOS 7.0+ -->
    <!-- iPhone / iPod Touch  -->
    <icon src="www/project/ios/icon-60.png" width="60" height="60" />
    <icon src="www/project/ios/icon-60@2x.png" width="120" height="120" />
    <!-- iPhone 6 Plus  -->
    <icon src="www/project/ios/icon-60@3x.png" width="180" height="180" />

    <!-- iPad -->
    <icon src="www/project/ios/icon-72.png" width="72" height="72" />
    <icon src="www/project/ios/icon-72@2x.png" width="144" height="144" />
    <!-- iPad -->
    <icon src="www/project/ios/icon-76.png" width="76" height="76" />
    <icon src="www/project/ios/icon-76@2x.png" width="152" height="152" />

    <!-- iOS 6.1 -->
    <!-- Spotlight Icon -->
    <icon src="www/project/ios/icon-Small-40.png" width="40" height="40" />
    <icon src="www/project/ios/icon-Small-40@2x.png" width="80" height="80" />
    <icon src="www/project/ios/icon-Small-40@3x.png" width="120" height="120" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="www/project/ios/icon-Small-50.png" width="50" height="50" />
    <icon src="www/project/ios/icon-Small-50@2x.png" width="100" height="100" />

    <!-- iPhone / iPod Touch -->
    <icon src="www/project/ios/icon.png" width="57" height="57" />
    <icon src="www/project/ios/icon@2x.png" width="114" height="114" />
    <!-- iPhone Spotlight and Settings Icon -->
    <icon src="www/project/ios/icon-Small.png" width="29" height="29" />
    <icon src="www/project/ios/icon-Small@2x.png" width="58" height="58" />
    <icon src="www/project/ios/icon-Small@3x.png" width="87" height="87" />

    <splash src="www/project/splashscreens/iphone3.png" width="320" height="480"/>
    <splash src="www/project/splashscreens/iphone4.png" width="640" height="960"/>

    <splash src="www/project/splashscreens/ipad_portrait.png" width="768" height="1024"/>
    <splash src="www/project/splashscreens/ipad_portrait@2x.png" width="1536" height="2048"/>
    <splash src="www/project/splashscreens/ipad_landscape.png" width="1024" height="768"/>
    <splash src="www/project/splashscreens/ipad_landscape@2x.png" width="2048" height="1536"/>

    <splash src="www/project/splashscreens/iphone5.png" width="640" height="1136"/>
    <splash src="www/project/splashscreens/iphone6.png" width="750" height="1334"/>
    <splash src="www/project/splashscreens/iphone6+.png" width="1242" height="2208"/>
    <splash src="www/project/splashscreens/iphone6+landscape.png" width="2208" height="1242"/>

  </platform>
</widget>
